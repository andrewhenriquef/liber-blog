<div class="">
  <div class="row">
    <h1> <%= @post.title %> </h1>
    <p> <%=@post.description %> </p>
  </div>
</div>

<div class="">
  <%= link_to 'Voltar', posts_path %>
  <%= link_to 'Editar', edit_post_path(@post) %>
  <%= link_to 'Deletar', @post, method: 'DELETE', data: { confirm: 'VocÃª tem certeza de que deseja deletar este post?' } %>
</div>

<%= form_for([@post, @post.comments.build], local: true) do |form| %>
  <% if flash[:comment_errors] %>
    <ul>
    <% flash[:comment_errors].each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= render @post.comments %>
