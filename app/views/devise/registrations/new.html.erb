<div class="col-sm-6 blog-main">
  <h2>Registro de usu√°rio</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field-group">
      <%= f.label :email, 'E-mail' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
    
    <div class="field-group">
      <%= f.label :name, 'Nome' %><br />
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="field-group">
      <%= f.label :password, 'Senha' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> minimo de caracteres)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="field-group">
      <%= f.label :password_confirmation, 'Confirme a senha' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Registrar", class: 'btn btn-primary', style: 'margin-top: 5%' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>